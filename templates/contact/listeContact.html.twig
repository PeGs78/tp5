{% extends 'base.html.twig' %}

{% block title %}Liste des contacts{% endblock %}

{% block body %}
<h1 class="text-center pt-2">Liste des contacts</h1>

<div class="row">
    {% for leContact in lesContacts %}
        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3">
            <div class="card mb-3">
                    <h3 class="card-header">{{ leContact.nom  }} {{leContact.prenom}}</h3>
                    <img class="avatar" style="height: 200px; width: 100%; display: block;" src="{{ leContact.avatar }}" alt="card image">
                    <div class="col">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">{{ leContact.rue  }}</li>
                        <li class="list-group-item">{{ leContact.cp  }}</li>
                        <li class="list-group-item">{{ leContact.ville  }}</li>
                        <li class="list-group-item">{{ leContact.mail  }}</li>
                        <li class="list-group-item">
                            {% if leContact.sexe == 0 %}
                                <span class="badge badge-info">homme</span>
                            {% else %}
                                <span class="badge badge-info">femme</span>
                            {% endif %}
                        </li>
                    </ul>
                    <div class="card-body">
                        <a href="#" class="btn btn-success btn-block text-center ">DÃ©tail...</a>
                    </div>
                    </div>            
            </div>
        </div>
    {% endfor %}                
</div>

{% endblock %}
